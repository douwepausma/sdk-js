{
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": false,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "module": "preserve",
    "lib": ["ESNext", "DOM"]
  }
}
