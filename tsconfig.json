{
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "module": "preserve",
    "noEmit": true,
    "lib": ["es2022"]
  }
}
